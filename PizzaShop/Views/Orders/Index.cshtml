@model IEnumerable<PizzaShop.Models.Order>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">All orders</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PriceEur)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeliveryAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeliveryPostCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeliveryCity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceEur)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryPostCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryCity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Detail", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<h2>Chat</h2>
<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <input type="hidden" id="displayname" />
    <ul id="discussion"></ul>
</div>

@* Container for all snackbar notifications *@
<div id="snackbar-container"></div>

@section scripts {
    @Scripts.Render("~/bundles/snackbar")
    @Scripts.Render("~/bundles/signalR")

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.orderHub;

            // Create a function that the hub can call back to display messages.
            chat.client.addNewOrder = function (order) {
                console.log(order);

                var el = $.snackbar({ content: "Order received", timeout: 100 });
                el.snackbar("show");
            };

            // Start the connection.
            $.connection.hub.start().done(function () {
                console.info('SignalR connection started');
            });
        });
</script>
}
