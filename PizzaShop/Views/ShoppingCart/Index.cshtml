@using PizzaShop.Models
@model ShoppingCartViewModel

@{ 
    ViewBag.Title = "Shopping Cart";
}

<h3>Your shopping cart</h3>

@{

    if (Model.CartPizzas.Count() > 0)
    {
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Order Summary</h3>
            </div>
            <div class="panel-body">

                <div id="update-message">
                </div>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Pizza</th>
                            <th>Toppings</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                        @foreach (var item in Model.CartPizzas)
                        {
                            <tr data-id="row-@item.ID">
                                <td>@item.Name</td>
                                <td>
                                    @{ int i = 0; }
                                    @foreach (Topping t in item.Toppings)
                                    {
                                        if (i + 1 < item.Toppings.Count())
                                        {
                                            @: @t.Name, 
                                        } else
                                        {
                                            @: @t.Name
                                        }
                                        i++;
                                    }
                                </td>
                                <td>@item.DisplayPrice &euro;</td>
                                <td>
                                    <a href="#" class="RemoveLink" data-id="@item.ID">Remove from cart</a>
                                </td>
                            </tr>
                        }
                    <tfoot>
                        <tr class="active">
                            <td><strong>Total</strong></td>
                            <td></td>
                            <td id="cart-total">
                                <strong>@Model.DisplayCartTotal &euro;</strong>
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                <button type="button" class="btn btn-success btn-sm" onclick="location.href='@Url.Action("AddressAndPayment", "Checkout")'">
                    Check Out &raquo;
                </button>
            </div>
        </div>
    }
    else
    {
        <div>
            <p>
                You haven't added any pizzas to your shopping cart. Go and pick some pizzas you like!
            </p>
        </div>
    }
}
