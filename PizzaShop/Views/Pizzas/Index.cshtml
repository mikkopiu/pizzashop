@model IEnumerable<PizzaShop.Models.Pizza>

@{
    ViewBag.Title = "Pizzas";
}

<h2>Pizzas</h2>

<p>
    @Html.ActionLink("Create a new pizza", "Create", null, new { @class = "btn btn-default" })
</p>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">All available pizzas</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PriceEur)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceEur)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
